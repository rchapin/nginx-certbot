#!/bin/bash

export NXCB_USERNAME=nginxcertbot

# The uid:gid to be used for the NXCB_USERNAME to be added to the system and
# underwhich the containers will run.
export NXCB_ID=<uid-for-nginxcertbot-user>
export NXCB_RANGE=65536

# The nginx image name and tag that you want to use.
export NXCB_NGINX_IMAGE=nginx:1.19.6-alpine

# Space delimited, quoted list of domains names to add to your cert.
export NXCB_DOMAINS="example.com www.example.com"
domains=()
for d in $NXCB_DOMAINS
do
  domains+=($d)
done
export NXCB_PRIMARY_DOMAIN=${domains[0]}

# Adding a valid email address is strongly recommended.
export NXCB_EMAIL=""

# Set to 1 if you're testing your setup to avoid hitting request limits.
export NXCB_STAGING=1

export NXCB_CERTBOT_CONF_PATH="/var/lib/docker/${NXCB_ID}.${NXCB_ID}/volumes/certbot-conf/_data"
export NXCB_CERTBOT_WWW_PATH="/var/lib/docker/${NXCB_ID}.${NXCB_ID}/volumes/certbot-www/_data"

